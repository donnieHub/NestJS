{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/r-omni/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/r-omni/tsconfig.app.json",
    "assets": [
      {
        "include": "../src/views/**/*",
        "outDir": "dist/apps/r-omni/src"
      },
      {
        "include": "../src/public/**/*",
        "outDir": "dist/apps/r-omni/src"
      }
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "root": "apps/r-omni",
  "projects": {
    "bff": {
      "type": "application",
      "root": "apps/bff",
      "entryFile": "main",
      "sourceRoot": "apps/bff/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bff/tsconfig.app.json"
      }
    },
    "r-omni": {
      "type": "application",
      "root": "apps/r-omni",
      "entryFile": "main",
      "sourceRoot": "apps/r-omni/src",
      "compilerOptions": {
        "tsConfigPath": "apps/r-omni/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    }
  }
}